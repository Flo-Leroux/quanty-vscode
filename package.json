{
  "name": "quanty-lang",
  "displayName": "Quanty Lang",
  "description": "Language Services for Quanty Lang",
  "version": "0.0.1",
  "main": "./dist/main",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [
      {
        "command": "quanty-lang.restart",
        "title": "Quanty: Restart"
      },
      {
        "command": "quanty-lang.showLogs",
        "title": "Quanty: Show Logs"
      }
    ],
    "languages": [
      {
        "id": "quanty-lang",
        "aliases": [
          "Quanty",
          "quanty"
        ],
        "extensions": [
          ".quanty",
          ".qy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "quanty-lang",
        "scopeName": "source.qy",
        "path": "./syntaxes/quanty.language.json"
      }
    ],
    "configuration": {
      "title": "Quanty Lang",
      "properties": {
        "quanty-lang.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Level of verbosity in quanty's log output.",
          "scope": "window"
        }
      }
    }
  },
  "configurationDefaults": {
    "[languageId]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "activationEvents": [
    "onLanguage:quanty-lang",
    "workspaceContains:.qy"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "vsce:package": "vsce package",
    "env:source": "export $(cat .envrc | xargs)",
    "vsce:publish": "sh publish.sh",
    "upgrade-interactive": "npx npm-check -u",
    "webpack": "webpack --mode development",
    "compile": "webpack --mode production",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "package": "npx vsce package",
    "publish": "npx vsce publish"
  },
  "devDependencies": {
    "@types/node": "^18.11.3",
    "@types/vscode": "^1.72.0",
    "ts-loader": "^9.4.1",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4",
    "vsce": "^2.13.0",
    "vscode-test": "^1.6.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}
